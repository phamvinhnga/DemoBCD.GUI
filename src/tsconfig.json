{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom" ],
    "mapRoot": "./",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@abp/*": [ "../node_modules/abp-ng2-module/dist/src/*" ],
      "@app/*": [ "./app/main/*" ],
      "@shared/*": [ "./app/shared/*" ],
      "@core/*": [ "./app/core/*" ],
      "@config/*": [ "./app/config/*" ],
      "@node_modules/*": [ "../node_modules/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
